{
  "kind": "collectionType",
  "collectionName": "menu_items",
  "info": {
    "singularName": "menu-item",
    "pluralName": "menu-items",
    "displayName": "MenuItem"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isAvailable": {
      "type": "boolean",
      "default": true
    },
    "preparationTimeMinutes": {
      "type": "integer"
    },
    "menu_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::menu-category.menu-category"
    }
  }
}
